---
# Super Linter Configuration
# This configures GitHub's Super Linter for comprehensive code quality enforcement
# https://github.com/github/super-linter

##########################
# Linter Configuration   #
##########################

# Default linter rules to run
VALIDATE_ALL_CODEBASE: false
DEFAULT_BRANCH: main
GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}

# Fail fast - stop on first linter failure for faster feedback
FAIL_FAST: false

# Output format
OUTPUT_FORMAT: tap
OUTPUT_FOLDER: super-linter.report
OUTPUT_DETAILS: detailed

##########################
# Language Configuration #
##########################

# YAML Linting (uses existing .yamllint config)
VALIDATE_YAML: true
YAML_CONFIG_FILE: .yamllint

# Ansible Linting (uses existing .ansible-lint config if present)
VALIDATE_ANSIBLE: true
ANSIBLE_LINT_CONFIG_FILE: ".ansible-lint"

# Markdown Linting (uses .markdownlint.json config)
VALIDATE_MARKDOWN: true
MARKDOWN_CONFIG_FILE: .markdownlint.json

# Dockerfile Linting
VALIDATE_DOCKERFILE_HADOLINT: true

# Shell Script Linting
VALIDATE_BASH: true
VALIDATE_BASH_EXEC: true

# Python Linting (for any Python scripts)
VALIDATE_PYTHON_BLACK: true
VALIDATE_PYTHON_FLAKE8: true
VALIDATE_PYTHON_ISORT: true
VALIDATE_PYTHON_PYLINT: true

# JSON Linting
VALIDATE_JSON: true

# Secrets Detection
VALIDATE_GITLEAKS: true

##########################
# File Filtering         #
##########################

# Filter files to lint
FILTER_REGEX_INCLUDE: .*\.(yml|yaml|md|py|sh|json|Dockerfile)$

# Exclude patterns
FILTER_REGEX_EXCLUDE: |
  .*\.git.*
  .*node_modules.*
  .*\.venv.*
  .*__pycache__.*
  .*\.pytest_cache.*
  vars/vars\.yml$

# Ignore specific directories
IGNORE_GITIGNORED_FILES: true

##########################
# Ansible Specific      #
##########################

# Ansible specific configuration
ANSIBLE_CONFIG_FILE: ansible.cfg
ANSIBLE_DIRECTORY: .

##########################
# Security Configuration #
##########################

# Enable additional security linters
VALIDATE_CHECKOV: false  # Infrastructure as Code security (disable if not needed)
VALIDATE_TEKTON: false   # Tekton pipeline security (disable if not needed)

##########################
# Performance Options   #
##########################

# Parallel execution
PARALLEL: true

# Use slim image for faster startup
SLIM_IMAGE: false

##########################
# Reporting Options     #
##########################

# Create annotations on PR
CREATE_LOG_FILE: true
LOG_LEVEL: INFO

# Summary reporting
SUMMARY_FILE: super-linter-summary.md
