# Super Linter Dynamic Configuration
# Generated by CI workflow based on runtime conditions
# NOTE: This file should be generated dynamically, not maintained manually

##########################
# Branch and Git Settings
##########################

# Default branch for comparison (should be dynamically set)
DEFAULT_BRANCH={{DEFAULT_BRANCH_PLACEHOLDER}}

# Validate all files vs changed files only (should be dynamically set)
VALIDATE_ALL_CODEBASE={{VALIDATE_ALL_CODEBASE_PLACEHOLDER}}

##########################
# Intelligent Validation Toggles
# (These should be set based on file detection)
##########################

# Enable/disable based on file presence and workflow needs
VALIDATE_YAML={{VALIDATE_YAML_PLACEHOLDER}}
VALIDATE_ANSIBLE={{VALIDATE_ANSIBLE_PLACEHOLDER}}
VALIDATE_MARKDOWN={{VALIDATE_MARKDOWN_PLACEHOLDER}}
VALIDATE_PYTHON={{VALIDATE_PYTHON_PLACEHOLDER}}
VALIDATE_BASH={{VALIDATE_BASH_PLACEHOLDER}}
VALIDATE_JSON={{VALIDATE_JSON_PLACEHOLDER}}
VALIDATE_SHELL_SHFMT={{VALIDATE_SHELL_SHFMT_PLACEHOLDER}}

# GitHub Actions workflow validation
VALIDATE_GITHUB_ACTIONS={{VALIDATE_GITHUB_ACTIONS_PLACEHOLDER}}

##########################
# Auto-fix Configuration
# (These should be set based on file detection)
##########################

# Enable auto-fixing for supported linters
FIX_YAML={{FIX_YAML_PLACEHOLDER}}
FIX_MARKDOWN={{FIX_MARKDOWN_PLACEHOLDER}}
FIX_JSON={{FIX_JSON_PLACEHOLDER}}
FIX_SHELL_SHFMT={{FIX_SHELL_SHFMT_PLACEHOLDER}}

##########################
# Performance Settings
##########################

# Multi-threading for faster execution
PARALLEL=true

# Use slim image for faster startup
SLIM_IMAGE=true

# Continue on errors to see all issues
FAIL_FAST=false

##########################
# Output Configuration
##########################

# Detailed output for CI analysis
OUTPUT_FORMAT=tap
OUTPUT_DETAILS=detailed
CREATE_LOG_FILE=true

##########################
# File Filtering
##########################

# Filter based on git changes (when not doing full scan)
USE_FIND_ALGORITHM=false
IGNORE_GITIGNORED_FILES=true

##########################
# Suppression
##########################

# Suppress certain outputs for cleaner logs
SUPPRESS_POSSUM=true
SUPPRESS_FILE_TYPE_WARN=true

##########################
# Security
##########################

# Disable network calls for security
DISABLE_NETWORK=false
