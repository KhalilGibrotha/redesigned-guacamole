# Super Linter Dynamic Configuration
# Generated by CI workflow based on runtime conditions
# NOTE: This file should be generated dynamically, not maintained manually

##########################
# Branch and Git Settings
##########################

# Default branch for comparison (should be dynamically set)
DEFAULT_BRANCH=BRANCH_PLACEHOLDER

# Validate all files vs changed files only (should be dynamically set)
VALIDATE_ALL_CODEBASE=VALIDATE_ALL_PLACEHOLDER

##########################
# Intelligent Validation Toggles
# (These should be set based on file detection)
##########################

# Enable/disable based on file presence and workflow needs (alphabetical order)
VALIDATE_ANSIBLE=ANSIBLE_PLACEHOLDER
VALIDATE_BASH=BASH_PLACEHOLDER
VALIDATE_GITHUB_ACTIONS=GITHUB_ACTIONS_PLACEHOLDER
VALIDATE_JSON=JSON_PLACEHOLDER
VALIDATE_MARKDOWN=MARKDOWN_PLACEHOLDER
VALIDATE_PYTHON=PYTHON_PLACEHOLDER
VALIDATE_SHELL_SHFMT=SHELL_PLACEHOLDER
VALIDATE_YAML=YAML_PLACEHOLDER

##########################
# Ansible-Specific Configuration
##########################

# Ansible linting with comprehensive rules
ANSIBLE_CONFIG_FILE=.ansible.cfg
ANSIBLE_DIRECTORY=.

##########################
# YAML Configuration
##########################

# yamllint configuration file
YAML_CONFIG_FILE=.yamllint
YAML_ERROR_ON_WARNING=false

##########################
# Auto-fix Configuration
# (These should be set based on file detection)
##########################

# Enable auto-fixing for supported linters (alphabetical order)
FIX_JSON=FIX_JSON_PLACEHOLDER
FIX_MARKDOWN=FIX_MARKDOWN_PLACEHOLDER
FIX_SHELL_SHFMT=FIX_SHELL_PLACEHOLDER
FIX_YAML=FIX_YAML_PLACEHOLDER

##########################
# Performance Settings
##########################

# Multi-threading for faster execution
PARALLEL=true

# Use slim image for faster startup
SLIM_IMAGE=true

# Continue on errors to see all issues
FAIL_FAST=false

# Log level for detailed analysis
LOG_LEVEL=INFO

##########################
# Output Configuration
##########################

# Detailed output for CI analysis (alphabetical order)
CREATE_LOG_FILE=true
OUTPUT_DETAILS=detailed
OUTPUT_FORMAT=tap

##########################
# File Filtering
##########################

# Filter based on git changes (when not doing full scan) (alphabetical order)
IGNORE_GITIGNORED_FILES=true
USE_FIND_ALGORITHM=false

##########################
# Suppression
##########################

# Suppress certain outputs for cleaner logs (alphabetical order)
SUPPRESS_FILE_TYPE_WARN=true
SUPPRESS_POSSUM=true

##########################
# Security
##########################

# Disable network calls for security
DISABLE_NETWORK=false
