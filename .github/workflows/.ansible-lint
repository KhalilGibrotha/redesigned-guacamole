---
# .ansible-lint configuration
skip_list:
  - name[play]  # import_playbook doesn't need names
  - name[casing]  # Allow emoji and special characters in names

# Use lenient rules for import_playbook
profile: min

# Exclude specific patterns
exclude_paths:
  - .git/
  - .github/
  - molecule/
  - ci-cd-templates/
