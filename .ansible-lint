---
# .ansible-lint configuration
profile: production

enable_list:
  - fqcn-builtins
  - risky-file-permissions
  - yaml
  - no-log-password
  - var-naming
  - no-unsafe-temporary-file
  - avoid-implicit
  - no-jinja-when
  - meta-runtime
  - no-same-owner

rulesdir:
  - ./custom_rules

# Exclude specific patterns
exclude_paths:
  - .git/
  - .github/
  - ci-cd-templates/
