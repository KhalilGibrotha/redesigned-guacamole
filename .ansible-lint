---
# .ansible-lint configuration
profile: production

enable_list:
  - fqcn-builtins
  - risky-file-permissions
  - yaml
  - no-log-password
  - var-naming

# Exclude specific patterns
exclude_paths:
  - .git/
  - .github/
  - ci-cd-templates/

collections:
  - redhat.*
  - ansible.*
  - community.general
  - community.crypto
  - community.network
